@require "~darch/src/styles/variables"
@require "~darch/src/styles/text"
@require "~darch/src/styles/table"

.landing-rebelt
    padding-bottom: 100pt;

.logo
    height: ($bar-height - 20pt);

.box
    margin-bottom: 20pt;
    padding: 10pt;
    background: #f5f5f5;

.h-space
    display: inline-block;
    margin-left: 10pt;
    margin-bottom: 10pt;

.subsection + .subsection
    margin-top: 20pt

.title
    h1();

div + .table-container
    margin-top: 20pt;
    
.table-container
    tableContainer()

.props-table,
.default-validators-table,
.custom-validators-table
    th,td
        vertical-align: top;
    
    @media (max-width: $screen-phone-max)
        min-width: 1000pt;

.result-box
    padding: 2em;
    border: 1pt dashed #999;
    
.callout-container,
.code-container
    margin: 30pt 0;