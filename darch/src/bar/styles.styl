@require "~styles/utils";
@require "~styles/variables";

// Compensate bar height
:global(.bar-fixed-on-top)
    padding-top: $bar-height;

.fixed-on-top
    position: fixed !important;
    top: 0;
    left: 0;
    width: 100%;
    z-index: $bar-zindex;

.bar
    width: 100%;
    height: $bar-height;
    padding: $bar-padding;
    position: relative;
    background-color: rgba(255, 255, 255, 0.95);

    clearfix();

    @media (min-width: $screen-tablet-min)
        padding: 0 10pt;

.background
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    opacity(0.95);
    background: white;

.bar-toggle
    width: 10pt;

.bar-toggle-line
    display: block;
    margin-bottom: 2pt;
    height: 1pt;
    width: 100%;
    background: #eee;
