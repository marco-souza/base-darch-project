@require "~styles/variables"
@require "~styles/utils"
@require "~styles/animation"

.dropdown
    position: relative;
    display: inline-block;

.caret
    caret()
    margin-left: 5pt;

.menu
    list-style: none;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 100%;
    left: 0;
    margin-top: 5pt;
    display: inline-block;
    min-width: 100pt;
    font-size: 0.8em;
    z-index: 100;

    shadow(0pt 0pt 5pt #999);

.enter
    opacity(0);
    transition(opacity .08s ease-in);

.enter-active
    opacity(1);

.leave
    opacity(1);
    transition(opacity .08s ease-in);

.leave-active
    opacity(0);
